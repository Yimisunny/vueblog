/* BEGIN +++++++++++++++ news +++++++++++++++ */
.personalCenter-news
  width: 900px
  margin: 0 auto 100px auto
  form
    height: 200px
    position: relative
    padding: 0 30px
    margin-bottom: 20px
    background-color: #fff
    label
      display: block
      height: 50px
      line-height: 50px
      span
        display: inline-block
        height: 22px
        width: 170px
        background: url('./../assets/news/news_up_icon.png')
  textarea
    width: 818px
    height: 78px
    margin-bottom: 10px
    padding: 10px
    border: 1px solid #eee
    resize: none
  span
    position: absolute
    top: 130px
    right: 35px
    color: #bbb
    font-size: 16px
  div
    margin-bottom: 10px
    .submit
        padding: 0
        float:right
        width: 90px
        height: 30px
        border: none
        background-color: #019ce4
        border-radius: 5px
        cursor: pointer
        color: #fff
        font-size: 16px
        font-family: 'Microsoft Yahei', Arial
    i
      display: inline-block
      padding-left: 20px
      height: 16px
      font-size: 14px
      color: #bbb
      margin-right: 25px
      cursor: pointer
      &.emoticon
        background: url('./../assets/news/emoticon.png') no-repeat
      &.images
        background: url('./../assets/news/images.png') no-repeat
      &.video
        background: url('./../assets/news/video.png') no-repeat
        padding-left: 30px
      &.attach
        background: url('./../assets/news/attach.png') no-repeat
  /*card-nav*/
  .personalCenter-news-nav
    width: 840px
    height: 40px
    line-height: 40px
    padding: 0 30px
    margin-bottom: 20px
    background-color: #fff
    li
      float: left
      margin-right: 35px
      font-size: 16px
      cursor: pointer
  /*wrap*/
  .personalCenter-news-CardWrap
    .newsCard-item
      position: relative
      width: 840px
      min-height: 80px
      padding: 20px 30px
      margin-bottom: 20px
      background-color: #fff
      .avater
        position: absolute
        top: 25px
        left: 30px
        width: 66px
        height: 66px
        border: 2px solid #eee
        border-radius: 50%
    .item-content
      margin: 10px 0 15px 100px
      h3
        font-size: 16px
        margin-bottom: 15px
      p
        font-size: 14px
        color: #999
        margin-bottom: 20px
        line-height: 2em
        a
          color: #019ce4
          margin-left: 20px
        img
          margin-bottom: 20px
    .item-info
      margin-left: 100px
      font-size: 14px
      color: #999
      em
        float: right
  /* END +++++++++++++++ news +++++++++++++++ */
